{
  "name": "mcp-context-saver",
  "version": "0.0.1",
  "description": "Analyze MCP servers and create LLM-powered wrappers for enhanced functionality",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-context-saver": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration --verbose",
    "dev": "tsx src/cli.ts",
    "analyze": "npm run build && node dist/cli.js analyze",
    "serve": "npm run build && node dist/cli.js serve",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "ai": "^4.0.0",
    "@ai-sdk/openai": "^1.0.0",
    "commander": "^12.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "llm",
    "ai",
    "wrapper",
    "analyzer"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}